class Solution {
    public ListNode mergeInBetween(ListNode list1, int a, int b, ListNode list2) {
        
        ListNode prevA = list1;    // Node before 'a'
        ListNode afterB = list1;   // Node after 'b'
        
        // Step 1: reach node before index a
        for(int i = 0; i < a - 1; i++){
            prevA = prevA.next;
        }
        
        // Step 2: reach node after index b
        for(int i = 0; i <= b; i++){
            afterB = afterB.next;
        }

        // Connect prevA to list2
        prevA.next = list2;

        // Step 3: reach end of list2
        while(list2.next != null){
            list2 = list2.next;
        }

        // Connect end of list2 to afterB
        list2.next = afterB;

        return list1;
    }
}
