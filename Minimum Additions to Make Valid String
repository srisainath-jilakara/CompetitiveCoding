class Solution {
    public int addMinimum(String word) {
        char expected = 'a';
        int additions = 0;
        for(char ch: word.toCharArray()) {
            while(ch!=expected) {
                additions++;
                expected = next(expected);
            }
            expected = next(expected);
        }
        if(expected == 'b') {
            additions+=2;
        }
        if(expected == 'c'){
            additions+=1;
        }
        return additions;
    }
    public char next(char c) {
        if(c=='a') return 'b';
        if(c=='b') return 'c';
        return 'a';
    }
}
